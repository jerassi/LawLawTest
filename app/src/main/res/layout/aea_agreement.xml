<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@drawable/titlebar_blue"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@drawable/titlebar_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="130dp"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="120dp"
                android:text="약관 동의"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>>

    </LinearLayout>>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:text="로로 서비스 이용을 위해 \n약관 및 서비스 이용 동의가 필요합니다."
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/allUnCheck"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/ic_checkbox_unchecked_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="     모두 확인, 동의합니다."
                        android:textColor="@color/blueTheme"
                        android:textSize="15dp" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#c9c9c9" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/useUnCheck"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/ic_checkbox_unchecked_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="     (필수) LawLaw 이용약관"
                        android:textColor="@color/blueTheme"
                        android:textSize="15dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/useTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/back_arrow" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/privacyUnCheck"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/ic_checkbox_unchecked_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="     (필수) 개인정보보호정책"
                        android:textColor="@color/blueTheme"
                        android:textSize="15dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/privacyTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/back_arrow" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_use"
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/titlebar_blue"
                android:onClick="onClick"
                android:text="완 료"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>>


    </LinearLayout>


</LinearLayout>